# CPDS AI Worker 配置文件

# === Master 连接 ===
MASTER_URL=http://localhost:8848

# === Worker 配置 ===
WORKER_GROUP=local
WORKER_ID=

# === 安全配置 ===
# 工作目录（限制文件操作范围）
WORKSPACE_DIR=/tmp/agentflow-workspace

# 路径限制（只能操作工作目录内的文件）
RESTRICT_PATH=false

# 只读模式（禁止写入操作）
READ_ONLY=false

# 沙箱模式（使用 Docker 隔离）
SANDBOXED=false

# === 资源限制 ===
# 最大内存
MAX_MEMORY=512M

# 最大 CPU 核心数
MAX_CPU=1

# === 网络配置 ===
# 允许网络访问
ALLOW_NETWORK=true

# === 审计日志 ===
# 启用审计
ENABLE_AUDIT=false

# 审计日志路径
AUDIT_LOG=/var/log/agentflow/audit.log

# === 调试 ===
# 日志级别
LOG_LEVEL=info

# 显示详细日志
VERBOSE=false
