{
  "name": "agentflow-monorepo",
  "version": "1.0.0",
  "description": "AgentFlow - AI Agent Task Collaboration System (Node.js Version)",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "master": "node packages/master/dist/index.js",
    "worker": "node packages/worker/dist/index.js",
    "cli": "node packages/cli/dist/index.js",
    "package": "./package.sh",
    "package:standalone": "pkg packages/master/dist/index.js --targets node20-macos-x64,node20-linux-x64 --output dist/agentflow-master -C Brotli --compress GZip",
    "docker:build": "docker build -f Dockerfile.standalone -t agentflow:latest .",
    "docker:run": "docker run -p 6767:6767 -v ~/.claude:/root/.claude -v agentflow-data:/data agentflow:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "agentflow",
    "ai",
    "agent",
    "task",
    "collaboration",
    "claude",
    "anthropic"
  ],
  "author": "AgentFlow Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "12.6.2"
  }
}
